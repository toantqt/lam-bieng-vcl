 
 <!DOCTYPE html>
 <html lang="en">
 <head>
	 <meta charset="UTF-8">
	 <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
	 <script src="/js/jquery.js"></script>
     <script src="socket.io/socket.io.js"></script>
     <script src="/js/client.js"></script>
     <style>
		 #profile{
			 width: 40%;
			 float: left;
			 
		 }
		 .page-header span{
			 color: blue;
		 }
		 #list-friend{
			 width: 60%;
			 height: 500px;
			 float: left;
			 margin-top: -21px;
             border-left: 1px solid #ccc;
			
		 }
		 #list-friend .title{
			 width: 100%;
			  border-bottom: 1px solid #eee;
			  text-align: center;
		 }
		 #list-friend .title h3{
			 font-size: 30px;
		 }
		 #list-friend li{
			 
			 margin-top: 10px;
			 margin-left: 5px;
			 width: 100%;
			 height: 40px;
			 font-size: 20px;
			list-style-type: none;
			border: 1px solid #ccc;
			background-color: #eee;
			padding: 5px 15px;	
			
		 }
		 #list-friend ul li .chat{
			 float: right;
		 }
		 #list-friend ul li .delete{
			 float: right;
		 }
         #list-friend ul li .video{
			 float: right;
		 }
		 #list-friend ul a{
				padding: 5px 15px;	
				text-decoration: none;
		 }
		#boxchat{
            margin-left: 10px;
            margin-top: 10px;
            width: 100%;
            height: 540px;
            background-color: white;
        }
        #boxchat .output{
            background-color: white;
            box-shadow: 0px 1px 1px #000;
            height: 500px;
            overflow: scroll;
        }


        #boxchat  form textarea{
            width: 90%;
            height: 60px;
            font-size: 20px;

        }
        #boxchat form input[type = "submit"]{
            width: 9%;
            height: 40px;
            margin-left: 0;
            float: right;
        }
		#chat-all {
			background-color: #eee;
			font-size: 13px;
			width: 80%;
		}
		#chat-group {
			margin-top: 9px;
			background-color: #eee;
			font-size: 13px;
			width: 80%;
		}
	 </style>
 </head>
 <body>
	<div id="profile">
		<h2 class="page-header">
			{{user.name}} 
			<span>({{user.username}})</span>
		</h2>
		<div>
			 <img class="profilestyle" src="/upload/{{user.userImage}}" alt="{{user.userImage}}" >
			 <form action="/" enctype="multipart/form-data" method="post" style="margin-top: 10px">
				 <label class="custombutton" id="custombutton" style="width:200px;border: 1px solid #ccc;display: inline-block; padding: 6px 12px;cursor: pointer;">
				 <input type="file" name="upload" accept="image/*" style=" display: none;" onchange="document.getElementById('custombutton').style.border = '2px solid lightgreen'">
				 Chọn ảnh mới 
				 </label>
				 <input type="submit" value="Upload" style="border: 1px solid #2d2d2d ; padding: 6px 12px; cursor: pointer; background-color: #2d2d2d; color: #ccc">
			 </form>
			 <div id="chat-all">
			 <a href="#"><i class="fas fa-globe-americas fa-2x">&nbsp &nbsp Chat All</i></a>
			 </div>
			 <div id="chat-group">
			 <a href="#"><i class="fas fa-users fa-2x"> &nbsp Chat Group </i></a>
			 </div>	
		</div>
		
	</div>
	<div id="list-friend">
		<div id="list">
			<div class="title">
			<h3>Danh sách bạn bè</h3>
			</div>
			
			<ul>
				{{#each user.friendsList}}
				<li>
					<img class="image" src="upload/default.png" width="30px" height="30px">
					<a href="#">
						{{this.friendName}}
					</a>
					<a href="#" class="delete">
						<i class="fas fa-user-slash"></i>
					</a>
                    <a href="/Call" class="video">
                        <i class="fas fa-video"></i>
                    </a>
					<a href="#" id="chat" class="chat">
						<i class="fas fa-comments"></i>
					</a>
				</li>
				{{/each}}
				
			</ul>
			
		</div>
        <div id="msg-frame">
            <div id="boxchat">
				<div class="output">
					
				</div>
				
				<form action="#">
					<textarea name="message" placeholder="Điền vào để gửi"></textarea>
					<input type="submit" name="send" value="Gửi">
				</form>
		    </div>
        </div>

	</div>
 </body>
 </html>
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 